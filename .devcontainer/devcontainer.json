{
	"image": "mlspace/torch:python3.10-cuda12.1.1-cudnn8-runtime-ubuntu22.04",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				}
			},
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"mutantdino.resourcemonitor",
				"mhutchie.git-graph"
			]
		}
	},
	"runArgs": [
		"--gpus", "all",
		"--shm-size", "16gb"
	],
	"mounts": [
		"source=/data/,target=/data/,type=bind,consistency=cached",
		// "source=/data2/,target=/data2/,type=bind,consistency=cached"

	],
	"forwardPorts": [
		5000
	]
}